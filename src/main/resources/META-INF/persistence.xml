<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="eFridge">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!--<class>de.thm.mni.vs.gruppe5.common.Order</class>-->
        <class>de.thm.mni.vs.gruppe5.common.Part</class>
        <!--<class>de.thm.mni.vs.gruppe5.common.Product</class>-->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/db"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="user"/>
            <property name="javax.persistence.jdbc.password" value="password"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
